{
  "name": "books-list",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "npx react-native run-android",
    "android-release": "cd android && ./gradlew assembleRelease && cd ..",
    "build": "yarn run clean && yarn run tsc --",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "clean:ios": "cd ios && pod cache clean --all;rm -rf ~/Library/Caches/CocoaPods; rm -rf Pods; rm -rf ~/Library/Developer/Xcode/DerivedData/*; pod deintegrate; pod setup; pod install;",
    "ios": "npx react-native run-ios --simulator \"iPhone X\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prettier": "npx prettier -l 'src/**/*.tsx'",
    "server": "json-server --watch db.json",
    "start": "npx react-native start",
    "start-clean": "npx react-native start --reset-cache",
    "test": "jest"
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.12.1",
    "@react-native-masked-view/masked-view": "^0.2.2",
    "@react-navigation/bottom-tabs": "^5.11.8",
    "@react-navigation/native": "^5.9.3",
    "@react-navigation/stack": "^5.14.3",
    "axios": "^0.21.1",
    "formik": "^2.2.6",
    "lodash": "^4.17.21",
    "react": "17.0.1",
    "react-native": "0.63.0",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-reanimated": "^2.0.0",
    "react-native-safe-area-context": "^3.2.0",
    "react-native-screens": "^2.18.1",
    "react-native-size-matters": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.168",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^25.1.0",
    "eslint": "^6.5.1",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "prettier": "^2.0.4",
    "react-test-renderer": "17.0.1",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "@types/react": "^16"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 70
      }
    }
  }
}
